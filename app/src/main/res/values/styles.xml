<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyAppTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/main_bk</item>
        <item name="colorPrimaryDark">@color/main_bk_dark</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/colorAccent</item>
        <!--<item name="android:textColor">@color/colorAccent</item>-->
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:colorControlNormal">@color/white</item>

        <item name="android:background">@color/main_bk_light_gray</item>
    </style>

    <style name="MyAppTheme.BigImage">
        <!--<item name="android:background">@color/main_bk</item>-->
        <!--<item name="android:textColor">@color/white_highlight</item>-->
        <item name="android:alertDialogTheme">@style/MyDialogTheme</item>
    </style>



    <style name="MyToolbar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white_highlight</item>
    </style>

    <style name="MyCtrlButton" >
        <item name="android:textColor">@color/black</item>
        <item name="android:elevation">1dp</item>
        <item name="android:translationZ">1dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/my_ctrl_btn</item>
        <item name="android:layout_margin">2dp</item>
    </style>
    
    <!--<style name="MyPlayCtrlButton">-->
        <!--<item name="android:background">@drawable/play_ctrl_btn</item>-->
    <!--</style>-->






</resources>
