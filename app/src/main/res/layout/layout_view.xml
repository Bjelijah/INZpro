<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/main_bk_light"
    android:padding="0dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_bk_dark"

        >
        <fragment
            android:id="@+id/fragment_play_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.inz.activity.fragment.PlayFragment"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bk_light"
       >
        <fragment
            android:id="@+id/fragment_replay_ctrl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.inz.activity.fragment.ReplayCtrlFragment"
            />

    </LinearLayout>

</LinearLayout>