<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable
            name="vm"
            type="com.inz.model.main.MainViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/main_bk_light"
        android:padding="0dp"
        android:id="@+id/fragment_play_view_ll"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            >
            <fragment
                android:id="@+id/fragment_play_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="com.inz.activity.fragment.PlayFragment"
                />
        </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:visibility="@{vm.MReplayCtrlVisibility}">
          <fragment
              android:id="@+id/fragment_replay_ctrl"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:name="com.inz.activity.fragment.ReplayCtrlFragment"
              />
      </LinearLayout>
    </LinearLayout>
</layout>



