<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_bk"
    >

    <com.inz.activity.view.HackyViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionName="myImage"
        android:layout_marginTop="?attr/actionBarSize"/>

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/MyToolbar"
            android:minHeight="@dimen/abc_action_bar_default_height_material"
            android:background="@color/main_bk_dark"
            >

            <TextView
                android:id="@+id/tv_bigimage_position"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:textSize="20sp"
                android:text="TextView"
                android:textColor="@color/white_highlight"
                android:background="@color/transparent"/>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <FrameLayout
        android:id="@+id/fl_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingBottom="8dip"
        android:paddingTop="5dip"
        android:background="@color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right" >
            <!--
                        <ImageView
                            android:id="@+id/imageView1_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/add" />
                         -->
            <ImageButton
                android:id="@+id/ib_scale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:background="#00000000"
                android:src="@mipmap/icon_scale_16_9"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/ib_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:background="#00000000"
                android:src="@drawable/share_btn_selector" />

            <ImageButton
                android:id="@+id/ib_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:background="#00000000"
                android:src="@drawable/delete_btn_selector" />

        </LinearLayout>

    </FrameLayout>















</FrameLayout>